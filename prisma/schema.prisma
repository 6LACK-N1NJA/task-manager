model Task {
    id String @default(cuid()) @id
    title String
    createdAt DateTime
    description String?
    dueDate DateTime?
    createdBy User? @relation(fields: [creatorId], references: id)
    creatorId String?
    project Project? @relation(fields: [projectId], references: id)
    projectId String?
}

model Project {
    id String @default(cuid()) @id
    title String
    description String?
    createdBy User? @relation(fields: [creatorId], references: id)
    creatorId String?
    tasks Task[]
}

model User {
    id String @default(cuid()) @id
    firstName String
    lastName String
    email String @unique
    projects Project[]
    tasks Task[]
    role Role @default(USER)
}

enum Role {
    USER
    READONLY
    ADMIN
}